# Development Environment Configuration
# Copy this to .env for local development

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/royal-media-auth
MONGODB_TEST_URI=mongodb://localhost:27017/royal-media-auth-test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-for-local-development-only-32-chars-minimum
JWT_REFRESH_SECRET=dev-refresh-secret-key-for-local-development-only-32-chars-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Development - will use console output)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@royal-media.local
FROM_NAME=Royal Media Dev

# Google OAuth (Development)
GOOGLE_CLIENT_ID=dev-google-client-id
GOOGLE_CLIENT_SECRET=dev-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# API Keys for development
API_KEYS=dev-auth-service-key,dev-admin-key,dev-test-key

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Configuration (relaxed for development)
BCRYPT_ROUNDS=8
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Features
DEV_SEED_DATA=true
DEV_MOCK_EMAIL=true
DEV_LOG_REQUESTS=true
ENABLE_SWAGGER=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty